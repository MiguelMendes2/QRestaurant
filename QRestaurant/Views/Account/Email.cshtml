
@{
    ViewData["Title"] = "Email";
}

@{
    ViewData["Title"] = "Alterar Password";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Conta</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="index">Home</a></li>
                    <li class="breadcrumb-item active">Conta</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <h5 class="card-header">Alterar Email</h5>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form method="post" asp-action="Password">
                            <div class="col-12 col-md-9">
                                <p class="text-danger">
                                    Email actual: @ViewBag.ActEmail
                                </p>
                                <div class="form-group">
                                    <label for="ActPass">Novo Email:</label>
                                    @Html.TextBox("NewEmail", ViewData["NewEmail"], new { @class = "form-control", @id = "NewEmail", @type = "text" })
                                </div>
                                <div class="form-group">
                                    <label for="NewPass">Confirme o Email:</label>
                                    @Html.TextBox("ConfEmail", ViewData["ConfEmail"], new { @class = "form-control", @id = "ConfEmail", @type = "text" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="ml-auto mr-1 mr-md-2 mr-lg-3">
                                    <a asp-action="index" class="btn btn-primary"><i class="fas fa-arrow-left"></i> Voltar</a>
                                    <button type="submit" class="btn btn-danger">Alterar Password</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@if (ViewBag.AltEmailError != null)
{
    <script type="text/javascript">
        $(document).ready(function () {
            toastr.error('@ViewBag.AltEmailError')
        });
    </script>
}

