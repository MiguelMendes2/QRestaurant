@model QRestaurantMain.Models.UsersModel

@{
    ViewData["Title"] = "Index";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Conta</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="index">Home</a></li>
                    <li class="breadcrumb-item active">Conta</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <h5 class="card-header">Informações</h5>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 col-md-8 col-lg-6 ">
                                <div class="form-group w-100">
                                    <label asp-for="Name" class="control-label">Nome:</label>
                                    <input asp-for="Name" class="form-control" readonly />
                                    <small class="form-text"><a asp-action="Data">Alterar dados pessoais</a></small>

                                </div>
                                <div class="form-group w-100">
                                    <label asp-for="Email" class="control-label">Email:</label>
                                    <input asp-for="Email" class="form-control" readonly />
                                    <small class="form-text"><a asp-action="Email">Alterar email</a></small>
                                </div>
                                <div class="form-group w-100">
                                    <label class="control-label">Password:</label>
                                    <input class="form-control" value="*******" readonly />
                                    <small class="form-text"><a asp-action="Password">Alterar password</a></small>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="ml-auto mr-1 mr-md-2 mr-lg-3">
                                <a asp-action="Privacidade" class="btn btn-primary mr-2">Privacidade <i class="fas fa-shield-alt"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@if (TempData["AccountSucess"] != null)
{
    <script type="text/javascript">
        $(document).ready(function () {
            toastr.success('@TempData["AccountSucess"]')
        });
    </script>
}
