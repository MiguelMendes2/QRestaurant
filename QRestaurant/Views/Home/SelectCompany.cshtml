@model IEnumerable<QRestaurantMain.ViewModels.CompanySelectorViewModel>

@{
    ViewData["Title"] = "SelectCompany";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Home</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="index">Home</a></li>
                    <li class="breadcrumb-item active">Conta</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <h5 class="card-header">Empresas</h5>
                    <!-- /.card-header -->
                    <div class="card-body">
                        @if (Model != null)
                        {
                            <h6 class="text-center">Selecione a empresa em que pretende entrar!</h6>
                            <div class="row">
                                @foreach (var comp in Model)
                                {
                                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mr-auto ml-auto">
                                        <div class="card">
                                            <img class="card-img-top" src="~/img/CompanysLogo/@comp.CompanyLogo">
                                            <div class="card-body text-center">
                                                <h5 class="m-0">@comp.CompanyName</h5><br />
                                                <a class="btn btn-primary" asp-action="SelectedCompany" asp-route-Id="@comp.Id">Entrar</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <h6 class="text-center">Ups</h6>
                            <p>Parece que você ainda não foi adicionado a uma empresa!</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
